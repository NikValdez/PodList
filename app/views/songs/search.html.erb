<%= form_tag(songs_search_path, method: :get) do %>
    <%= label_tag(:term, "Search for:") %>
    <%= text_field_tag(:term) %>
    <%= submit_tag("Search") %>
<% end %>


<% if @results.present? %>
  <h1>Podcasts</h1>
  <ul>
    <% @results.each do |podcast| %>
      <%= image_tag podcast["artworkUrl60"], class: "pcast-image" %>
      <li><%= podcast['trackName'] %></li>
      <li><%= podcast["feedUrl"] %></li>
      <li><%= podcast %></li>

    <% end %>
  </ul>
<% end %>

<h2>Eps</h2>
<% @podcasts.each do |pod| %>
  <li><%= pod.title %></li>
  <br>
<% end %>
