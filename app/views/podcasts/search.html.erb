<div class="container">
  <div class="row">
    <%= render "podcasts/playlist" %>
    <div class="col-md-6">
  <%= render 'podcasts/search_field' %>

  <% if @results.present? %>
    <div class="results">
        <div class="track-name">
      <%= image_tag @results.first["artworkUrl60"], class: "pcast-image" %>
        <%= @results.first['trackName'] %>
      </div>
          <button type="button", class="btn btn-primary", id="show-episodes">Show all episodes</button>
            <% episodes = Feedjira::Feed.fetch_and_parse(@results.first["feedUrl"]).entries %>
              <% episodes.each do |episode| %>
              <div id="grid-snap" class="episode-drag"><li class="episode-data"><%= episode.title %></li></div>
            <% end %>
        <% end %>
      </div>
  </div>

</div>
